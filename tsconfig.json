{
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "lib": ["es6"],
      "sourceMap": false,
      "outDir": "lib",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/*"],
    "exclude": [
        "./dist",
        "./lib"
    ],
    
  }
  